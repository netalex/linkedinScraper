# Configurazioni per il LinkedIn Job Scraper

# Percorsi di output
OUTPUT_DIR=job_files
INDEX_FILE=jobs_index.json

# Limiti e ritardi per evitare blocchi
MAX_JOBS_TO_SCRAPE=100
MIN_DELAY=2
MAX_DELAY=5
MAX_RETRIES=3
MAX_EMPTY_PAGES=3

# Parametri di ricerca predefiniti
DEFAULT_LOCATION=Italy
DEFAULT_KEYWORDS=front end developer OR angular developer OR react developer

# Opzioni per proxy (opzionale)
USE_PROXY=false
PROXY_URL=

# Configurazioni di logging
LOG_LEVEL=INFO
LOG_FILE=linkedin_scraper.log

# Preferenze per il formato del report
DEFAULT_REPORT_FORMAT=markdown

# Preferenze per l'arricchimento dei dati
ENRICH_DATA=true

# Opzioni per il tracciamento delle candidature
DEFAULT_PRIORITY=Medium
DEFAULT_INTEREST_LEVEL=Medium

# Parole chiave per calcolare la rilevanza
RELEVANCE_KEYWORDS=angular,typescript,frontend,react,javascript,web developer,html,css,node.js

# Impostazioni temporali per i follow-up
DEFAULT_FOLLOWUP_DAYS=7

# Configurazioni per l'API (non cambiare a meno che non sia necessario)
USE_GUEST_API=true